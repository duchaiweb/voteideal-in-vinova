<h1>Listing posts of user <%= @user.fullname %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Sharewith</th>
      <th>View</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.sharewith_text %></td>
        <td><%= post.view %></td>
        <td><%= post.status_text %></td>
      </tr>
    <% end %>
  </tbody>
</table>
