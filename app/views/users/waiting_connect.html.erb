<div class="col-sm-1"></div>
<div class="col-sm-10">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listing Users</h3>
  </div>
  <div class="panel-body">
  <% if (@users.count == 0) %>
    <p>There are no waiting friends to show.</p>
  <% else %>
      <table class="table table-striped table-hover table-bordered table-responsive ">
        <thead>
          <tr>
            <th><center>Email</center></th>
            <th><center>Fullname</center></th>
            <th><center>Birthday</center></th>
            <th><center>Phone</center></th>
            <th><center>Status</center></th>
            <th colspan="2"><center>Option</center></th>
            <% if (session[:user_status] > 0) %>
            <th><center>Action</center></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.fullname %></td>
              <td><%= user.birthday %></td>
              <td><%= user.phone %></td>
              <td>
                <span class="label label-<% if (user.status == -1) %><%= 'warning' %><% elsif (user.status == 0) %><%= 'default' %><% else %><%= 'success' %><% end %>">
                  <%= user.status_text %>
                </span>
              </td>
              <td>
                <center>
                  <%= form_tag(posts_path, method: "get") do %>
                    <%= hidden_field :user_id, nil, value: user.id %>
                    <%= submit_tag "View post", class: "btn btn-xs btn-info" %>
                  <% end %>
                </center>
              </td>
              <td>
                <center>
                <% @check_connect = Connect.where user_id: session[:user_id], friend: user.id %>
                <% if @check_connect.count == 0 %>
                  <%= form_tag('accept_connect', method: "get") do %>
                    <%= hidden_field :user_id, nil, value: user.id %>
                    <%= submit_tag "Accept", class: "btn btn-xs btn-primary" %>
                  <% end %>
                <% else %>
                  <%= form_tag('remove_connect', method: "get") do %>
                    <%= hidden_field :user_id, nil, value: user.id %>
                    <%= submit_tag "Remove", class: "btn btn-xs btn-danger" %>
                  <% end %>
                <% end %>
                </center>
              </td>

              <% if (session[:user_status] > 0) %>
                <td><center>
                  <%= link_to 'Show', user, class: "btn btn-xs btn-default" %>
                  <% if params[:user_id] == nil %>
                  <%= link_to 'Edit', edit_user_path(user), class: "btn btn-xs btn-default" %>
                  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
                  <% end %>
                </center></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
<% if (session[:user_status] > 0) %>
  <%= button_to 'New User', new_user_path, class: "btn btn-success", method: "get" %>
<% end %>
</div>


<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-3">

    <div class="sidebar-container widget-about">
      <div class="sidebar-content">
        <div class="sidebar-header"><center><strong><%= @user.fullname %></strong></center></div>
        <div class="side-avatar">
          <img src="/avatar/<%= @user.id %>" class="profile_avatar_me" alt="<%=@user.fullname%>">
        </div> 
        <div class="sidebar-list">Born: <strong><%= @user.birthday.strftime("%B %d,%Y")%></strong></div>
        <div class="sidebar-list">Phone: <strong><%= @user.phone %></strong></div>
        <div class="sidebar-list">Email: <strong><%= @user.email %></strong></div>
        <div class="sidebar-list">Joined: <strong><%= @user.created_at.strftime("%B %d,%Y") %></strong></div>
        <div class="sidebar-list">Friend: <strong><%= @user.connects.count %> people</strong></div>
        <div class="sidebar-list">Ideals: <strong><%=@user.posts.count %> posts</strong></div>
      </div>

    </div>
  </div>

  <div class="col-sm-7">
    <div class="row">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Friend's <%= @user.fullname%></h3>
          </div>
          <% if @friend_user.count == 0 %>
            <p>There are no member to show.</p>
          <% else %>
            <div class="user_list">
              <div class="user_row">
                <% count = 1 %>
                <% @friend_user.each do |user| %>
                <% if user.id != session[:user_id] %>
                    <% if count > 2 and count % 2 == 1 %>
                      </div>
                      <div class="user_row">
                    <% end %>
                    <div class="user_item">
                      <div class="user_item_avt">
                        <img src="/avatar/<%= user.id %>" alt="" class="user_item_img">
                      </div>
                      <div class="user_item_info">
                        <a href="<%= users_path %>/<%= user.id %>">
                          <strong><%= user.fullname %></strong>
                        </a>
                        <br>
                        <%= user.connects.count%> friends
                      </div>
                      <div class="user_action">
                        <% @check_connect_of_me = Connect.where user_id: session[:user_id], friend: user.id %>
                          <% @check_connect_of_friend = Connect.where friend: session[:user_id], user_id: user.id %>

                          <% @count = @check_connect_of_me.count + @check_connect_of_friend.count %>
                          <% @status = @check_connect_of_me.pluck(:status) + @check_connect_of_friend.pluck(:status) %>

                          <% if @count == 0 %>
                            <%= form_tag('users/connect', method: "get") do %>
                              <%= hidden_field :user_id, nil, value: user.id %>
                              <%= submit_tag "Add friend", class: "btn btn-xs btn-primary" %>
                            <% end %>

                          <% elsif @status[0] == 0 %>
                            <span class="label label-default">Waiting</span>
                          <% else %>
                            <%= form_tag('users/remove_connect', method: "get") do %>
                              <%= hidden_field :user_id, nil, value: user.id %>
                              <%= submit_tag "Unfriend", class: "btn btn-xs btn-danger" %>
                            <% end %>
                          <% end %>
                      </div>
                    </div>
                    <% count += 1 %>
                <% end %>
                <% end %>
              </div>      
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
