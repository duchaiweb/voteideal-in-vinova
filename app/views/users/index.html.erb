<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listing Users</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
          <th>Fullname</th>
          <th>Birthday</th>
          <th>Phone</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
            <td><%= user.fullname %></td>
            <td><%= user.birthday %></td>
            <td><%= user.phone %></td>
            <td>
              <%= form_tag(posts_path, method: "get") do %>
                <%= hidden_field :user_id, "", value: user.id %>
                <%= submit_tag ("View post") %>
              <% end %>
            </td>            
            <td>
            <%= link_to 'Show', user, class: "btn btn-xs btn-default" %>
            <% if params[:user_id] == nil %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-xs btn-default" %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-default" %>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= button_to 'New User', new_user_path, class: "btn btn-success", method: "get" %>
