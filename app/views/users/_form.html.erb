<div class="upload_avatar_form">
  <div class="avatar_current">
    <img class="avatar_current" src="/avatar/<%= session[:user_id] %>" alt="">
  </div>
    <%= form_tag(uploadAvatar_users_path, :multipart => true) do %>
    <%= file_field_tag :datafile, class: "btn choose_button" %>
    <%= submit_tag "Change", class: "btn btn-sm btn-danger upload_button" %>
  <% end %>
</div>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.label :email %><br>
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
 
    <div class="col-sm-6">
        <%= f.label :password %><br>
        <%= f.password_field :password , :class => 'form-control'%>
    </div>
   </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.label :fullname %><br>
      <%= f.text_field :fullname , :class => 'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <%= f.label :birthday %><br>
      <%= f.date_field :birthday , :class => 'form-control' %>
    </div>
    <div class="col-sm-6">
      <%= f.label :phone %><br>
      <%= f.number_field :phone  , :class => 'form-control' %>
    </div>
  </div>
  <br>
  <div class="actions">
      <%= f.submit 'Create Account', :class => "btn btn-success" %>
  </div>
<% end %>

