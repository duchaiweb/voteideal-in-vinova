    </div>
   </div>
  <div class="row">
    <div class="col-lg-12">
      <%= f.label :fullname %><br>
      <%= f.text_field :fullname , :class => 'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <%= f.label :birthday %><br>
      <%= f.date_field :birthday , :class => 'form-control' %>
    </div>
    <div class="col-lg-6">
      <%= f.label :phone %><br>
      <%= f.number_field :phone  , :class => 'form-control' %>
    </div>
