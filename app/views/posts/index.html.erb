<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listing Ideals</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Sharewith</th>
          <th>View</th>
          <th>Status</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.sharewith_text %></td>
            <td><%= post.view %></td>
            <td><%= post.status_text %></td>
            <td><%= post.user.fullname %></td>
            <td><%= link_to 'Show', post, class: "btn btn-xs btn-default" %></td>
            <% if params[:user_id] == nil %>
              <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-xs btn-default" %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-default" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if params[:user_id] == nil %>
  <%= button_to 'New Post', new_post_path, class: "btn btn-primary", method: "get" %>
<% end %>


