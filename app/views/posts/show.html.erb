<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-3">
    <div class="panel panel-primary">
      <div class="panel-heading"><center><strong><%= @user.fullname %></strong></center></div>
    </div class="side-avatar">
    <div >
      <img src="/avatar/<%= session[:user_id]%>" class="profile_avatar_me" alt="<%=@user.fullname%>">
    </div> 
    <br>
    <div class="sidebar-container widget-about">
      <div class="sidebar-content">
        <div class="sidebar-header">About</div>
        <div class="sidebar-list">Born: <strong><%= @user.birthday.strftime("%B %d,%Y")%></strong></div>
        <div class="sidebar-list">Phone: <strong><%= @user.phone %></strong></div>
        <div class="sidebar-list">Email: <strong><%= @user.email %></strong></div>
        <div class="sidebar-list">Joined: <strong><%= @user.created_at.strftime("%B %d,%Y") %></strong></div>
        <div class="sidebar-list">Friend: <strong><a href="http://phpdolphin.com/demo/index.php?a=profile&amp;u=jasonstatham&amp;r=subscriptions">3 people</a></strong></div>
        <div class="sidebar-list">Id: <strong><a href="http://phpdolphin.com/demo/index.php?a=profile&amp;u=jasonstatham&amp;r=subscribers">350 people</a></strong></div>
        <div class="sidebar-list">Likes: <a href="http://phpdolphin.com/demo/index.php?a=profile&amp;u=jasonstatham&amp;r=likes"><strong>11 Messages</strong></a></div>
      </div>
    </div>
  </div>
  <div class="col-sm-7">
     
      <div class="list-group">
        <a href="#" class="list-group-item active">
          <h4 class="list-group-item-heading"><%= @post.title %></h4>
        </a>
        <div class="list-group-item">
          <p class="list-group-item-text"><%= @post.content %></p>
        </div>
        <div class="list-group-item">
          <p class="list-group-item-text">
            <strong>Sharewith: </strong><span class="badge"><%= @post.sharewith_text %></span> |
            <strong>View: </strong><span class="badge"><%= @post.view %></span> |
            <strong>Status: </strong><span class="badge"><%= @post.status_text %></span> |
            <strong>Voted: </strong><span class="badge"><%= @post.votes.count %></span> |
            <strong>Rate: </strong>
              <span class="badge">
                <% if (@post.votes.average(:rate) == nil) %>
                <%= '0 / 5' %>
                <% else %>
                <%= @post.votes.average(:rate) %> / 5
                <% end %>
              </span>
          </p>
        </div>
        <div class="list-group-item">
          <p class="list-group-item-text">
            <strong>Posted by: </strong>
            <%= @post.user.fullname %>
          </p>
        </div>
      </div>


      <% if @post.check_show_vote(session[:user_id], @post.id) == nil %>
     
        <p>
          <%= form_for([@post, @post.votes.build]) do |f| %>
            <div class="row">
              <div class="col-sm-2">
                  <h4>Your vote: </h4>
              </div>
              <div class="col-sm-2">
                <%= f.select :rate, options_for_select([1, 2, 3, 4, 5]),{}, class: "form-control input-xs" %>
                <%= f.hidden_field :user_id, value: session[:user_id] %>
                <%= f.hidden_field :post_id, value: @post.id %>
              </div>
              <div class="col-sm-3">
                <%= f.submit "Vote", class: "btn btn-danger" %>
              </div>
            </div>
          <% end %>
        </p>
      <% end %>
      <% if @post.comments.count > 0 %>
        <% @post.comments.each do |comment| %>    
          <div class="comment-replies comment-replies-content">
            <div class="message-reply-container">
          
              <div class="comment-reply-avatar">
                <img src="/avatar/<%= @user.id %>">
              </div>
              <div class="comment-reply-comment">
                <span class="comment-reply-author"><a href="http://phpdolphin.com/demo/index.php?a=profile&amp;u=chegin"><%= comment.user.fullname %></a></span>: <%= comment.content %>
                <div class="comment-time">
                <div class="timeago"><%= comment.created_at.strftime("%d-%m-%Y %H:%M") %></div>
              </div>
            </div>        
          </div>
          </div>
          <div class="comment-divider"></div>
        <% end %>
      <% end %>
      <br>
      <h4>Write comment for this post:</h4>
      <%= form_for([@post, @post.comments.new]) do |f| %>
        <p> 
          <%= f.text_area :content, class: "form-control", rows: "6" %>
          <%= f.hidden_field :status, value: "1" %>
          <%= f.hidden_field :post_id, value: @post.id %>
          <%= f.hidden_field :user_id, value: session[:user_id]  %>
        </p>
          
        <p>
          <%= f.submit "Post Comment", class: "btn btn-sm btn-success" %>
        </p>
        
      <% end %>


      <% if session[:user_id] == @post.user_id %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
      <% end %>
  </div>
</div>
